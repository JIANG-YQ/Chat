<UserControl x:Class="Chat.SendImg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat"
             mc:Ignorable="d" 
             Height="auto" Width="auto" HorizontalAlignment="Right" VerticalAlignment="Top" MaxWidth="300" Foreground="{x:Null}" Padding="5" MinWidth="100">
    <Image x:Name="image" HorizontalAlignment="Right" VerticalAlignment="Top" MaxWidth="300" ScrollViewer.VerticalScrollBarVisibility="Disabled" Stretch="None" MinWidth="100"/>
</UserControl>
