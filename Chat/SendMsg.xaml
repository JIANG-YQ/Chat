<UserControl x:Class="Chat.SendMsg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat"
             mc:Ignorable="d" 
             Height="auto" Width="auto" HorizontalAlignment="Right" VerticalAlignment="Top" MaxWidth="450" Foreground="{x:Null}" Padding="5">
    <TextBlock x:Name="Text" Text="Label" FontSize="18.667" TextWrapping="Wrap" Foreground="White" Padding="20,10,10,10" Loaded="LoadAnimation" Margin="5">
        <TextBlock.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="LightBlue" Offset="1"/>
                <GradientStop Color="#FF3B566C" Offset="0.48"/>
            </LinearGradientBrush>
        </TextBlock.Background>
    </TextBlock>
</UserControl>
