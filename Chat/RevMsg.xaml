<UserControl x:Class="Chat.RevMsg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chat"
             mc:Ignorable="d" 
            Height="auto" Width="auto" HorizontalAlignment="Left" VerticalAlignment="Top" MaxWidth="450" Foreground="{x:Null}" Margin="5">
    <TextBlock x:Name="Text" Text="Label" FontSize="18.667" TextWrapping="Wrap" Foreground="Black" Margin="5" Padding="20,10,10,10" Loaded="LoadAnimation">
        <TextBlock.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFBFF1F9" Offset="0.48"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </TextBlock.Background>
    </TextBlock>
</UserControl>
